# =================================
# Finance Tracker Environment Variables
# =================================
# Copy this file to .env and update the values
# Generate new keys using the commands below!

# =================================
# Database Configuration
# =================================
POSTGRES_DB=finance_tracker
POSTGRES_USER=financeuser
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Database URL for backend (auto-constructed from above)
# Format: postgresql://user:password@host:port/database
# For Docker: host is 'db' (service name)
# For local: host is 'localhost'
DATABASE_URL=postgresql://financeuser:your_secure_postgres_password_here@db:5432/finance_tracker

# =================================
# Backend Configuration
# =================================
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_super_secret_key_here_change_in_production
FLASK_ENV=production
PORT=5001

# CORS Origins (comma-separated list)
# Add your EC2 public IP or domain name here
# Example: http://YOUR_EC2_IP,http://YOUR_EC2_IP:3000,http://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost,http://YOUR_EC2_PUBLIC_IP

# =================================
# Frontend Configuration
# =================================
# Backend API URL - where frontend will make requests
# For EC2: use http://YOUR_EC2_PUBLIC_IP:5001
# For local: use http://localhost:5001
REACT_APP_API_URL=http://localhost:5001

# =================================
# Backup Configuration
# =================================
# Number of days to keep database backups
BACKUP_KEEP_DAYS=7

# =================================
# Security Notes
# =================================
# 1. Generate a strong SECRET_KEY: python -c "import secrets; print(secrets.token_hex(32))"
# 2. Use a strong POSTGRES_PASSWORD with at least 16 characters
# 3. Never commit .env file to version control
# 4. Update CORS_ORIGINS with your actual domain/IP
# 5. Use HTTPS in production (consider setting up SSL/TLS with Let's Encrypt)



